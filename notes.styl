
.note {

  font-size: 14px;

  &.major > .head {
    font-size: 150%;
    height: 30px;
    font-weight: bold;

    .bullet {
      font-family: serif;
      font-size: 25px;
      line-height: 10px;
    }
  }

  margin-left: 5px;
  > .head .bullet {
    content: "\2219";
    font-size: 18px;
    line-height: 18px;
    display: inline-block;
    margin-right: 5px;
    margin-top: 6px;
  }
  > .head {
    position: relative;

    .title {
      display: block;
      margin-top: -19px;
      margin-left: 17px;
    }

    .title, input {
      border: none;
      background-color: transparent;
      font-size: inherit;
      border-bottom: 1px solid transparent;

      &:focus {
        outline: none;
        border-bottom: 1px dashed #aaa;
      }
    }
  
    .tags {
      position: absolute;
      top: 0;
      right: 0;
    }
  }

  > .body {
    padding-left: 8px;
    border-left: 2px solid #eee;
    margin-left: 2px;
  }
}

